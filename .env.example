# AI PR Reviewer Environment Configuration

# API Keys for different AI providers (configure based on your chosen provider)
# Anthropic/Claude API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key  
OPENAI_API_KEY=your_openai_api_key_here

# Google/Gemini API Key
GOOGLE_API_KEY=your_google_api_key_here

# Legacy fallback API key (if using older configs)
AI_API_KEY=your_api_key_here

# JWT Secret for authentication (used in demo scenarios)
JWT_SECRET=your_jwt_secret_key_here

# Optional: Enable debug logging
DEBUG=false

# Optional: Custom config file path (defaults to .ai-reviewer-config.json)
AI_REVIEWER_CONFIG_PATH=.ai-reviewer-config.json

# Optional: AI Provider selection (anthropic, openai, google)
AI_PROVIDER=anthropic

# Optional: AI Model selection
AI_MODEL=claude-4-sonnet
